<div class="container content">
    <h1>Burger App</h1>

    <form>
        <div class="form-group">
            <input type="text" required placeholder="Add a burger" class="form-control" name="burger_name">
        </div>

        <button type="submit" class="btn btn-outline-dark" style="font-size: 15px">Add Burger</button>
    </form>

    <div class="content-burger">
        {{#each burgers}}
        <div class="content-burger_list" id={{id}}>
        <img src="https://images.unsplash.com/photo-1551615593-ef5fe247e8f7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1680&q=80" alt="burger">
            <p>{{burger_name}}</p>
            <button class="btn btn-outline-dark devour" data-id="{{id}}" data-state="{{devoured}}">
                {{#if devoured}} Devoured {{else}} Devour it! {{/if}}
            </button>
        </div>
        {{/each}}
    </div>

</div>