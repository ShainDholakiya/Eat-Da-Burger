{{> header }}

<div class="all-burgers">

    <div class="devoured-section">
        <h2>Devoured Burgers</h2>
        {{#each burgers}} {{#if devoured}}
        <div class="burger" data-id='{{id}}'>
            <img src="https://images.unsplash.com/photo-1551615593-ef5fe247e8f7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1680&q=80" alt="burger">
            <p>{{burger_name}}</p>
            <button class='btn btn-outline-dark' data-id='{{id}}'>Delete</button>
        </div>
        {{/if}} {{/each}}
    </div>

    <div class="undevoured-section">
        <h2>Not Devoured Burgers</h2>

        {{#each burgers}} {{#unless devoured}}
                <div class="burger" data-id='{{id}}'>
                    <img src="https://images.unsplash.com/photo-1551615593-ef5fe247e8f7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1680&q=80" alt="burger">
                    <p>{{burger_name}}</p>
                    <button class='btn btn-outline-dark' data-id='{{id}}'>Delete</button>
                </div>
            {{/unless}}{{/each}}
    </div>
</div>